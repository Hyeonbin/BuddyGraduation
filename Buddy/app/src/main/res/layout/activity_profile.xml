<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/Buddy_Profile_Backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_arrow_left_b" /><!--백 버튼-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="사용자 정보"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            /><!--앱 타이틀-->

    </RelativeLayout> <!-- 상단 버튼 -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Buddy_Profile_Photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_profile"/><!--프로필 사진-->

    <TextView
        android:id="@+id/Buddy_Profile_Name"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="이름"
        android:textSize="18dp"
        android:textColor="#000000" /><!--이름-->

    <TextView
        android:id="@+id/Buddy_Profile_Old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" /><!--생년월일-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/Buddy_Profile_Old"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/Buddy_Profile_Genderbtn"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:text="성 별"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="#e0e0e0"
            android:layout_alignParentRight="true" /><!--여자 버튼(누르기 전)-->

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Buddy_Profile_Inputbtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="입 력"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="#93DAFF"/><!--저장 버튼-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>