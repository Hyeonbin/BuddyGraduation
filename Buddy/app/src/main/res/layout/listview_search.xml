<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Buddy_Searchlistview_Year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/Buddy_Searchlistview_Month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/Buddy_Searchlistview_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/Buddy_Searchlistview_Hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/Buddy_Searchlistview_Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/Buddy_Searchlistview_Ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_gps_b"/><!--gps 표시-->

        <TextView
            android:id="@+id/Buddy_Searchlistview_Location"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도서관"
            android:textSize="18dp"
            android:textColor="#000000"/><!--지역-->

    </LinearLayout>

    <TextView
        android:id="@+id/Buddy_Searchlistview_Diary"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 존나 먹었다 존나 먹어서 배부르다 혈당 올라가면 어쩌지 걱정된다....."
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginRight="3dp"
        android:ellipsize="end"
        android:maxLines="2"/><!--다이어리-->

</LinearLayout>